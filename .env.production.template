# Production Environment Variables
# IMPORTANT: Change all default values before deploying!

# Database
POSTGRES_USER=skillverse
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=skillverse

# JWT Security
JWT_SECRET=CHANGE_ME_SUPER_SECRET_KEY_AT_LEAST_256_BITS

# CORS (comma-separated list)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Eureka
EUREKA_HOST=discovery-service
EUREKA_PORT=8761

# API Gateway
GATEWAY_URL=https://api.yourdomain.com

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090
